<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FormCadastro">
    <TextView
        android:id="@+id/title_cadastrese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_cadastro"
        android:textSize="50sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        android:layout_height="360dp"
        app:layout_constraintTop_toBottomOf="@id/title_cadastrese"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/cadastroname"
        style="@style/Edit_Text"
        android:hint="Nome"
        android:inputType="text"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toTopOf="@id/containerComponents"
        android:drawableRight="@drawable/ic_baseline_people_alt_24"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"/>


    <EditText
        android:id="@+id/cadastrouser"
        style="@style/Edit_Text"
        android:drawableRight="@drawable/ic_baseline_people_outline_24"
        android:hint="Apelido"
        android:inputType="text"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/cadastroname"/>

    <EditText
        android:id="@+id/cadastroemail"
        style="@style/Edit_Text"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/black"
        android:drawableRight="@drawable/ic_email"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/cadastrouser"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"/>

    <EditText
        android:id="@+id/cadastrosenha"
        style="@style/Edit_Text"
        android:hint="Senha"
        android:inputType="textPassword"
        android:backgroundTint="@color/black"
        android:drawableRight="@drawable/ic_eye"
        android:textColorHint="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/cadastroemail"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cadastrar"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="@string/cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerComponents" />
</androidx.constraintlayout.widget.ConstraintLayout>